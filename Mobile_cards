    <script>
        // دووگمەی گەڕانەوە - بگەڕێتەوە پەڕەی پرۆفایل
        document.getElementById('mobileCardsBackButton').addEventListener('click', function() {
            // لێرەدا دەتوانیت پەڕەی پرۆفایل بکەیتەوە
            // بە نمونەیە، ئێمە ئاگادارییەک پیشان دەدەین
            alert("گەڕانەوە بۆ پەڕەی پرۆفایل");
            
            // لە کاتی بەکارهێناندا، ئەم کۆدە دەبێت پەڕەی پرۆفایل بکاتەوە
            // window.location.href = "profile.html";
        });
        
        // کلیککردن لەسەر کارتەکان
        document.querySelectorAll('.card-box').forEach((card, index) => {
            card.addEventListener('click', function() {
                alert(`کارتی ${index + 1} هەڵبژێردرا! ئێستا دەتوانیت وردەکاری زیاتر ببینیت یان بیکڕیت.`);
            });
        });
        
        // هەنگاوی تاقیکردنەوە بۆ بینینی پەڕەکە
        console.log("پەڕەی کارتی مۆبایل بارکرا!");
    </script>
